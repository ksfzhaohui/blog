<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.2.xsd">
	<!-- BeanFactoryPostProcessor -->
	<bean id="customBeanFactoryPostProcessor" class="com.spring.processor.CustomBeanFactoryPostProcessor"></bean>
	<bean id="customBeanDefinitionRegistryPostProcessor"
		class="com.spring.processor.CustomBeanDefinitionRegistryPostProcessor"></bean>
	<bean id="emailListener" class="com.spring.processor.EmailListener"></bean>


	<bean id="person1" destroy-method="myDestroy" init-method="myInit"
		class="com.spring.bean.PersonBean">
		<property name="name">
			<value>jack</value>
		</property>
	</bean>

	<!-- 配置自定义的后置处理器 -->
	<bean id="postProcessor" class="com.spring.processor.MyBeanPostProcessor" />


</beans>